<!-- Include the header partial template -->
<%- include("partials/header.ejs") %>

      <!-- Main container with centered content -->
      <div class="main row justify-content-center align-items-center">
        <!-- Check if there's valid content to display -->
        <% if(isContentValid) { %>
          <!-- Recipe card container -->
          <div class="col-md-7">
            <!-- Card layout with shadow and rounded borders -->
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <!-- Card content column -->
              <div class="col p-4 d-flex flex-column position-static">
                <!-- Recipe category/subject -->
                <strong class="d-inline-block mb-2 text-primary-emphasis"><%= subject %></strong>
                <!-- Recipe title -->
                <h3 class="mb-0"><%= title %></h3>
                <!-- Post date -->
                <div class="mb-1 text-body-secondary">Nov 12</div>
                <!-- Show first 50 characters with ellipsis -->
                <p class="card-text mb-auto"><%- recipe.slice(0, 30) %>...</p> 
                
        
                <!-- Toggle link for showing recipe in a new page -->
                <a href="/continueReading" class="icon-link gap-1 icon-link-hover stretched-link">
                  Continue reading
                  <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
                </a>
              </div>
              <!-- Commented out placeholder image section -->
              <div class="col-auto d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect></svg>
              </div>
            </div>
          </div>
        <% } %>
        
